<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.cap.cheapstays.BookingReceiptActivity"
    android:orientation="vertical"
    android:padding="15dp"
    android:layout_marginTop="20dp"
    android:layout_marginStart="20dp">


    <TextView
        android:id="@+id/tv_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/your_booking_details"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:textStyle="italic"/>

    <TextView
        android:id="@+id/tv_noOfRooms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:textStyle="italic"/>

    <TextView
        android:id="@+id/tv_noOfChildren"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:textStyle="italic"/>

    <TextView
        android:id="@+id/tv_noOfAdults"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:textStyle="italic"/>

    <TextView
    android:id="@+id/tv_bedType"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:textStyle="italic"/>

    <TextView
        android:id="@+id/tv_roomType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:textStyle="italic"/>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/closeBooking"
        style="@style/loginButton"
        android:layout_width="200dp"
 android:layout_centerHorizontal="true"
      android:layout_marginTop="100dp"
        android:text="@string/close"
        android:textSize="20sp"
        app:cornerRadius="20dp" />
</RelativeLayout>

</LinearLayout>